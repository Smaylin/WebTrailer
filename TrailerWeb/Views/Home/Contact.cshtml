@{ ViewData["Title"] = "TrailersApp"; }

@model TrailerWeb.dbTrailers


<body>

    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
     {

            
        <div class="pelicula-strange">
            <div class="contenedor">
                <img width="600" src="@Url.Action("getImage", "Home", new {id=Model.ID_Trailer})" alt="Alternate Text" />
                <h3 class="titulo">
                    @Html.DisplayFor(Tr => Tr.Titulo)

                </h3>
                <p class="director">
                    @Html.DisplayFor(Tr => Tr.Director)
                </p>
                <p class="descripcion">
                    @Html.DisplayFor(Tr => Tr.Sipnosis)

                </p>
                <br>
                <p class="reparto">
                    @Html.DisplayFor(Tr => Tr.Reparto)

                </p>
                <br>
                <p class="duracion">
                    @Html.DisplayFor(Tr => Tr.Duracion)
                </p>
                <br>
                <p class="fecha">
                    @Html.DisplayFor(Tr => Tr.Fecha)

                </p> 
                <br>
                
                   
            <iframe width="560" height="315" src="@Html.DisplayFor(Tr => Tr.Trailer)" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

            </div>
        </div>
    }
</body>
